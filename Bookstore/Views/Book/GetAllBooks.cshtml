@model IEnumerable<BookModel>
@{
    ViewData["Title"] = "All Books";
}

<title>GetAllBooks</title>

<div class="container">
    <h3 class="display-4">All Books List</h3>
    <div class="row">

        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="bd-placeholder-img card-img-top" width="100%" height="225">
                    </svg>
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-route="bookDetailsRoute" asp-route-id="@book.Id" asp- class="btn btn-sm btn-outline-secondary">View details</a>
                            </div>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
</div>